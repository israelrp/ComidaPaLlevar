@model ComidaPaLlevar.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}

<h2>Acceso administración</h2>

<div style="margin:0px auto; width:450px; background-color:transparent; text-align:center;">
    <fieldset>
        <legend>Login</legend>
        @using (Html.BeginForm("Login","Administracion",FormMethod.Post))
        {
            @Html.ValidationSummary(true)                                       
            <div class="form-group">
                <label class="sr-only" for="Email">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control" })<br/>
                @Html.ValidationMessageFor(m=>m.Email)
            </div>
            <div class="form-group">
                <label class="sr-only" for="Password">Password</label>
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })<br/>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <button type="submit" class="btn btn-default">Entrar <span class="glyphicon glyphicon-log-in"></span></button>
        }
    </fieldset>
</div>