@model List<ComidaPallevar.Domain.Menus>
@{
    ViewBag.Title = "Index";
}

<style>
    .itemPlatillo {
        margin-top:10px;
    }

        .itemPlatillo:nth-child(even) {
            background-color: #FFE4E1;
        }

        .itemPlatillo:nth-child(odd) {
            background-color: #F0F8FF;
        }
        
    .imgPlatillo {
        border-radius: 5px;
    }
    .contentImage, .contentDatos
    {
      display:inline-block;
      vertical-align:top;
    }
    .contentImage {
        margin-right:20px;
    }
    .contentDatos {        
    }

    .btn {
        background-color: #228B22;
        color: #FFF;
        font-weight: bold;
    }
        .btn:hover {
            background-color: #FFF;
            color: #228B22;
            font-weight:bold;
        }

    .contentDatos p label {
        font-weight: lighter;
        font-size: 12px;
        text-transform: none;
    }
    .contentDatos p span {
        color: #708090;
        text-transform: capitalize;
        font-weight: bolder;
    }

    .nombrePlatillo label,
    .precioPlatillo label {
        font-size: 16px !important;
        font-style: italic;
    }


</style>

<h2 style="color: #696969; text-transform:capitalize; font-variant:small-caps; font-style:italic;">Menú del día</h2>
<h5>Su pedido deber ser confirmado antes de la 1:00 P.M., despues de esa hora el sistema cerrara el menú.</h5>
<ul class="list-group">
    @foreach (var menu in Model)
    {
        <li class="list-group-item itemPlatillo">
            <div class="contentImage">
                <img src="@menu.Imagen" alt="FotoMenu" style="width:200px; height:auto; " class="imgPlatillo"  />
            </div>
            <div class="contentDatos">
                <p class="nombrePlatillo">
                    <span>Plato fuerte:</span>
                    <label>@menu.Nombre</label>
                </p>
                
                <p class="descripcionPlatillo">
                    <span>Descripción del platillo:</span>
                    <label>@menu.Descripcion</label>
                </p>
                
                <p class="precioPlatillo">
                    <span>Precio:</span>
                    <label>@menu.Precio.ToString("c")</label>
                </p>
                
                @using (Html.BeginForm("Index","Menu", FormMethod.Post))
                {
                    <input type="hidden" name="MenuId" value="@menu.Id" />
                    <button class="btn btn-default" style="text-align:right;" type="submit">
                        <span class="glyphicon glyphicon-ok-sign"></span><span> Solicitar </span>
                    </button>
                }
            </div>
        </li>
    }
</ul>

