@model ComidaPallevar.Domain.Ordenes
@{
    ViewBag.Title = "Index";
}
<style>
    .text-area{
        width:500px;
        height:100px;
    }
</style>
<h2 style="color: #696969; text-transform:capitalize; font-variant:small-caps; font-style:italic;">Confirmar orden</h2>
<div>
   <span>
        <li class="list-group-item" style="height:210px;">
            <div style="float:left;">
                <h3 style="padding:0px; margin:0px; font-weight:bold;">@Model.Menu.Nombre</h3>
                <img src="@Model.Menu.Imagen" alt="FotoMenu" style="width:200px; height:auto;" />
            </div>
            <div style="margin-top:25px; margin-left:220px;">                
                <h4 style="padding:0px; margin:0px;">@Model.Menu.Descripcion</h4><br />                
                <b style="font-weight:bold; color: red; font-size:16px;">@Model.Menu.Precio.ToString("c")</b>
            </div>            
        </li>
    </span>
    <br/>
    <div style="text-align:center;">
        @using (Html.BeginForm())
        {
            <label>Comentarios:</label><br />
            @Html.TextAreaFor(m => m.Comentarios, new { @class = "text-area" })<br />
            <label>Dirección:</label><br />
            @Html.TextAreaFor(m => m.Direccion, new { @class = "text-area" })<br />
            @Html.HiddenFor(m => m.Estatus)
            @Html.HiddenFor(m => m.FechaSolicitud)
            @Html.HiddenFor(m => m.MenuId)
            @Html.HiddenFor(m => m.UsuarioId)<br />
            <button class="btn btn-default" style="text-align:right;" type="submit">
                <span class="glyphicon glyphicon-ok-sign"></span><span> Confirmar pedido</span>
            </button>
        }
    </div>
</div>

