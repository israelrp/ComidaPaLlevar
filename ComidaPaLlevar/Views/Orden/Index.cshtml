@model ComidaPallevar.Domain.Ordenes
@{
    ViewBag.Title = "Index";
}

<h2>Confirmar orden</h2>
<div>
    <span>
        <li class="list-group-item">
            <div style="float:left;">
                <img src="@Model.Menu.Imagen" alt="FotoMenu" style="width:200px; height:auto;" />
            </div>
            <div>
                <h3>@Model.Menu.Nombre</h3><br />
                <h4>@Model.Menu.Descripcion</h4><br />
                <b>@Model.Menu.Precio.ToString("c")</b>
            </div>
        </li>
    </span>
    @using (Html.BeginForm())
    {
        <label>Comentarios</label><br/>
        @Html.TextAreaFor(m => m.Comentarios)<br/>
        <label>Dirección</label><br/>
        @Html.TextAreaFor(m => m.Direccion)<br/>
        @Html.HiddenFor(m=>m.Estatus)
        @Html.HiddenFor(m=>m.FechaSolicitud)
        @Html.HiddenFor(m=>m.MenuId)
        @Html.HiddenFor(m=>m.UsuarioId)<br/>
        <button class="btn btn-default" style="text-align:right;" type="submit">
            <span class="glyphicon glyphicon-ok-sign"></span><span> Confirmar pedido</span>
        </button>
    }
</div>

