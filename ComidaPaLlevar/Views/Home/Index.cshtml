<script type="text/javascript">
    $(function () {
        var login = GetURLParameter('Login');
        var registro = GetURLParameter('Registro');
        var mensaje = GetURLParameter('Mensaje');
        if (login != null) {
            if (login == 'false') {
                //alert("Tu usuario o password son incorrectos");
                $("#dialog-usuarioPass").dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    },
                    hide: {
                        effect: "explode",
                        duration: 1000
                    }
                });
            }
        }

        if (registro != null) {
            if (registro == 'false') {
                //alert("Opsss, ha ocurrido un problema con tu registro.");
                $("#dialog-problemaReg").dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    },
                    hide: {
                        effect: "explode",
                        duration: 1000
                    }
                });
            }
            else {
                //alert("¡Gracias por registrarte! Ahora inicia sesión.");
                $("#dialog-Gracias").dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    },
                    hide: {
                        effect: "explode",
                        duration: 1000
                    }
                });
            }
        }//            
    });



    function GetURLParameter(sParam)
    {
        var sPageURL = window.location.search.substring(1);
        var sURLVariables = sPageURL.split('&');
        for (var i = 0; i < sURLVariables.length; i++)
        {
            var sParameterName = sURLVariables[i].split('=');
            if (sParameterName[0] == sParam)
            {
                return sParameterName[1];
            }
        }
    }
</script>

